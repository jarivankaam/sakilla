doctype html
html
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    // Bootstrap CSS
    link(
      rel="stylesheet",
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    )
    link(rel='stylesheet', href='/stylesheets/style.css')
  body.d-flex.flex-column.min-vh-100.p-0
    // Header/Navbar
    header
      nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
        .container
          a.navbar-brand(href="/") SakilaHub
          button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
            span.navbar-toggler-icon
          #navbarNav.collapse.navbar-collapse
            ul.navbar-nav.ms-auto
              li.nav-item
                a.nav-link(href="/") Home
              li.nav-item
                a.nav-link(href="/staff") Staff
              li.nav-item
                a.nav-link(href="/about") About

    // Main content
    main.container.mt-4.mb-4
      block content
  

    // Footer
    footer.mt-auto.bg-light.py-3
      .container.text-center
        span.text-muted © #{new Date().getFullYear()} SakilaHub — All rights reserved.

    // Bootstrap JS (needed for navbar toggler, etc.)
    script(
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    )
